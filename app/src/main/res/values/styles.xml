<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="selector_title_centered" parent="selector_title">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="selector_title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#33B5E5</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="status_bar_key" parent="android:Widget.Holo.Light.TextView">
    <item name="android:textColor">#404040</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="status_bar_value" parent="android:Widget.Holo.Light.TextView">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">30sp</item>
  </style>

  <style name="HelpDialog" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="Theme.Light.DarkActionBar.TabColor"
         parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/Widget.Light.ActionBar.Solid.Inverse.LightTabs</item>
  </style>

  <style name="Widget.Light.ActionBar.Solid.Inverse.LightTabs"
         parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/action_bar_background</item>
    <item name="android:backgroundStacked">@color/action_bar_stacked_background</item>
  </style>

  <style name="stats_list_header" parent="android:Widget.Holo.Light.TextView">
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@android:color/darker_gray</item>
    <item name="android:textSize">@dimen/heading_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

</resources>