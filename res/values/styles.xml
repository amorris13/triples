<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="selector_title_centered" parent="selector_title">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="selector_title">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#33B5E5</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="status_bar_key" parent="android:Widget.Holo.Light.TextView">
		<item name="android:textColor">#404040</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="status_bar_value" parent="android:Widget.Holo.Light.TextView">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">30sp</item>
	</style>

</resources>